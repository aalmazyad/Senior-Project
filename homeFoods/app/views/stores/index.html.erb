<!DOCTYPE html>
<html>
<body>
<% if @mystore != nil %>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead"><%= @mystore.name %></p>
                <div class="list-group">
                 <%= link_to 'Add Product', new_store_product_path(@mystore), :class => "list-group-item"%>

                    <%= link_to 'Edit Store Information', edit_store_path(@mystore.id), :class => "list-group-item"%>
                     
                     <%= link_to 'Delete My Store', store_path(@mystore.id),method: :delete, data: { confirm: 'Are you sure?' }, :class =>"list-group-item" %>
                </div>
            </div>

    <div class="col-md-9">
             <% if @mystore.products != nil %>
                <div class="row">
                <% @mystore.products.each do |product| %>
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                        <div class="product-img">
                            <%= link_to image_tag(root_url + "/images/" + product.filename, size: "200x150", alt: product.filename), product %>
                            </div>
                            <div class="caption">
                                <h4 class="pull-right">$ <%= product.price %></h4>
                                <h4><%= product.name %></h4>
                                <p>Quantity: <%= product.quantity %></p>
                             <div id = "owner-icons">
                                <%= link_to '', edit_product_path(product.id), :class => "glyphicon glyphicon-cog"%>

                                <%= link_to '', product, method: :delete, data: { confirm: 'Are you sure?' },class: 'glyphicon glyphicon-trash' %>
                             </div>
                              


                         
                            

                            </div>
                        </div>
                    </div>
                <%end %>
                </div>
            <% end %>
        </div>
    </div>
     <% else %>
     <div class="form-group" align="center">
     <br> <br>
        
     <div class="alert alert-info">
  Our records indicate that you do not have a store, if you wish to create one and sell products
  <div id = "owner-icons">
    <%= link_to 'click here', new_store_path %></strong> 
     </div>
      </div>
       </div>
    <% end %>
</div>
</body>
</html>