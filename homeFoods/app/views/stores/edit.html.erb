
<%= form_for(@store) do |f| %>
  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% @store.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group" align="center">
<div class="field">
<h1>Edit Your Store Info </h1>
<strong>Upload Logo</strong> 
<br>
 <%= f.file_field :uploaded_file, :class => "wrapper" %>
  </div>
  <div class="field">
    <strong>Store Name</strong>
    <%= f.text_field :name, :class => "form-control",:style => "width: 400px;" %>
  </div>
  <div class="field">
    <strong> Contact Info  </strong>
    <%= f.select :contactMethod, @contactMethod,:class => "form-control",:style => "width: 400px;" %>
     </div> 
     <div class="field">
    <%= f.text_field :contactId,:class => "form-control",:style => "width: 400px;" %>
   </div> 
  <div class="field">
    <%= f.label :type %>
    <%= f.select :foodType, @foodType,required: 'true', autofocus: 'true', class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description,:style => "width: 400px;" %>
  </div>
  <div class="field">
    <strong>Open: </strong>
    <%= f.select :fromDay,@days %>
    <strong>To: </strong>
    <%= f.select :toDay,@days %><br> <br>
    <strong>From: </strong>
    <%= f.select :fromHour,@hours%>
    <%= f.select :fromMinute,@minutes %>
    <%= f.select :fromZone,@zones %>
    <strong>To: </strong>
    <%= f.select :toHour,@hours %>
    <%= f.select :toMinute,@minutes %>
    <%= f.select :toZone,@zones %>
  </div>
  <div class= "field">
    <strong>Tags</strong>
    <%= f.text_field :tags,:class => "form-control",:style => "width: 400px;" %>
  </div>
  <div class="field">
   <strong>Address</strong>
    <%= f.text_field :address,:class => "form-control",:style => "width: 400px;" %><br>
       <strong>City</strong>
    <%= f.text_field :city,:class => "form-control",:style => "width: 400px;" %>
       <strong>State </strong>
    <%= f.text_field :state,:class => "form-control",:style => "width: 400px;" %>
       <strong>Zip Code </strong>
    <%= f.text_field :zipcode,:class => "form-control",:style => "width: 400px;" %>
       <strong>Country Code </strong>
    <%= f.text_field :country,:class => "form-control",:style => "width: 400px;" %>
  </div>
  <div class="actions">
    <%= f.submit "Complete Action", :class => "btn btn-default",:style => "width: 200px;"%>
  </div>
</div> 
<% end %>
