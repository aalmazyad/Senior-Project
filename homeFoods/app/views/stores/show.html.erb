<!DOCTYPE html>
<html>
<body>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">
                       <div class="img-circle">
                <%= link_to image_tag(root_url + "/images/" + @store.filename, size: "200x150", alt: @store.filename) %></p>
                </div>
                 <% if current_user != @store.user %>
                  <%= rating_for @store, "overall", :enable_half => false,:half_show => true,:disable_after_rate => false %>
                  <% end %>
                   <p><%= @store.contactMethod%>: <%= @store.contactId%></p>
                   <p><%= @store.fromDay%> To <%= @store.toDay%></p>
                    <p>From <%= @store.fromHour%> <%= @store.fromZone%> To <%= @store.toHour%> <%= @store.toZone%></p>
                       <% if @store.showAddress == 1 %>
                      <p>Address: <%= @store.address%> <%= @store.city%> , <%= @store.state%> <%= @store.zipcode%>
                      <% end %>
                                        <% if @store.delivery == 1 %>
                    <p  style="color:green;">Delivery Available !</p>
                    <% end %>
            </div>
    <div class="col-md-9">
                 <% if @store.products != nil %>
                <div class="row">
                <% @store.products.each_with_index do |product,index| %>
                
                        <div class="img-thumbnail">
                            <%= link_to image_tag(root_url + "/images/" + product.filename, size: "200x150", alt: product.filename), product %>
                            <div class="caption">
                                <h4 class="pull-right">$ <%= product.price %></h4>
                                <h4><%= product.name %></h4>
                        
                                   <div id="star-img">
                                   <% if current_user != product.store.user %>
                                <%= rating_for product, "overall", :enable_half => false,:disable_after_rate => false %>
                                <% end %>
                                </div>
                            </div>
                        </div>
        
                <%end %>
                </div>
            <% end %>
        </div>
    </div>
        </div>
    </div>
</body>
</html>
