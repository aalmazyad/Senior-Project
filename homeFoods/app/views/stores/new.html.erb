
<%= form_for(@store) do |f| %>
  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% @store.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group" align="center">
<div class="field">
<h1>Create Your First Store ! </h1>
<strong>Upload Logo</strong> <br>
 <%= f.file_field :uploaded_file %>
  </div>
  <div class="field">
    <strong>Store Name</strong><br>
    <%= f.text_field :name, :class => "form-control",:style => "width: 400px;" %>
  </div>
  <div class="field">
    <strong> Contact Info  </strong><br>
    <%= f.select :contactMethod, @contactMethod,:class => "form-control",:style => "width: 400px;" %>
    <%= f.text_field :contactId,:class => "form-control",:style => "width: 400px;" %>
  </div>
  <div class="field">
    <%= f.label :type %><br>
    <%= f.select :foodType, @foodType %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description,:style => "width: 500px;" %>
  </div>
  <div class="field">
    <strong>Open: </strong>
    <%= f.select :fromDay,@days,:class => "form-control" %>
    <strong>To: </strong>
    <%= f.select :toDay,@days %><br> <br>
    <strong>From: </strong>
    <%= f.select :fromHour,@hours %>
    <%= f.select :fromZone,@zones %>
    <strong>To: </strong>
    <%= f.select :toHour,@hours %>
    <%= f.select :toZone,@zones %>
  </div>
  <div class= "field">
    <strong>Tags</strong>
    <%= f.text_field :tags,:class => "form-control",:style => "width: 400px;" %>
  </div>
  <div class="field">
    <%= f.label :Address %>
    <%= f.text_field :address,:class => "form-control",:style => "width: 400px;" %> <br>
       <strong>Zip Code </strong>
    <%= f.text_field :address,:class => "form-control",:style => "width: 400px;" %>
  </div>

  <%= f.hidden_field :city,value: @city %>
  <%= f.hidden_field :state,value: @state %>
  <%= f.hidden_field :country,value: @country %>

  <div class="actions">
    <%= f.submit "Complete Action", :class =>"btn btn-info active",:style => "width: 200px;"%>
  </div>
</div> 
<% end %>
