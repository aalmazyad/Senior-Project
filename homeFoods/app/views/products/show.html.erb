<body>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div class="thumbnail">
                    <div id="inner-img">
                     <%= image_tag(root_url + "/images/" + @product.filename, size: "1000x1000", alt: @product.filename) %>
                     </div>
                    <div class="caption-full">
                        <h4 class="pull-right">$<%= @product.price %></h4> 
                        <h4><%=@product.name%></h4>
                        <p>Description:<%= @product.description %></p>
                        <p>Quntity:<%= @product.quantity %></p>
                    </div>
                    <div class="ratings">
                    <% if current_user != @product.store.user %>
                    <div id="star-img">
                  <%= rating_for @product, "overall", :enable_half => true,:half_show => true,:disable_after_rate => false %>
                  <br>
                   </div>
                  <% end %>
                        
                    </div>
                </div>

                <div class="well">

                    <div class="text-right">
                        <a class="btn btn-success">Leave a Review</a>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-12">
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star-empty"></span>
                            Anonymous
                            <span class="pull-right">10 days ago</span>
                            <p>This product was great in terms of quality. I would definitely buy another!</p>
                        </div>
                    </div>

                    <hr>

                </div>

            </div>

        </div>

    </div>
    <!-- /.container -->

    <div class="container">

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

</body>

</html>