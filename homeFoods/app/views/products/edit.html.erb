     <strong>Description</strong> <br>
    <%= f.text_area :description, :class => "form-control",:style => "width: 400px;" %>
  </div>
  <div class="field">
   <strong>Quantity</strong> <br>
    <%= f.number_field :quantity, :class => "form-control",:style => "width: 150px;" %>
  </div>
  <div class="field">
 <strong>Price</strong> <br>
    <%= f.number_field :price, :class => "form-control",:style => "width: 150px;" %>
  </div>
<br>
